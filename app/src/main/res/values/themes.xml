<resources>
    <style name="CheesecakeItem" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- ubah parent-nya jadi none / hilangkan -->
    <style name="NavButtonActive">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- ubah parent-nya jadi none / hilangkan -->
    <style name="NavIconActive">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:tint">@color/colorPrimary</item>
    </style>

    <style name="NavTextActive" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="NavButtonInactive" parent="NavButtonActive" />
    <style name="NavIconInactive" parent="NavIconActive">
        <item name="android:tint">@color/black</item>
    </style>
    <style name="NavTextInactive" parent="NavTextActive">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
